{
    "name": "tfc-pay-react",
    "version": "1.0.0",
    "type": "module",
    "description": "TFC Pay Mobile App - Sharable React UI for Android APK Development",
    "main": "src/index.ts",
    "types": "src/index.ts",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d dist",
        "android:init": "npx cap init \"TFC Pay\" com.tfcpay.app --web-dir dist && npx cap add android",
        "android:sync": "npm run build && npx cap sync android",
        "android:open": "npx cap open android",
        "android:run": "npm run build && npx cap run android",
        "android:debug": "npx cap run android",
        "apk:build": "npm run build && npx cap sync android && cd android && ./gradlew assembleDebug",
        "live": "vite"
    },
    "homepage": "https://tfcsunil52-ctrl.github.io/tfc-pay-android-app/",
    "dependencies": {
        "clsx": "^2.0.0",
        "html-to-image": "^1.11.13",
        "lucide-react": "^0.294.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^2.0.0"
    },
    "devDependencies": {
        "@capacitor/android": "^5.6.0",
        "@capacitor/cli": "^5.6.0",
        "@capacitor/core": "^5.6.0",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.0",
        "gh-pages": "^6.3.0",
        "postcss": "^8.4.0",
        "tailwind-scrollbar": "^4.0.2",
        "tailwindcss": "^3.3.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0"
    }
}
